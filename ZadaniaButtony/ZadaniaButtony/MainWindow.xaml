<Window x:Class="ZadaniaButtony.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZadaniaButtony"
        mc:Ignorable="d"
        Title="Zadania Buttony" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="zablokuj" TargetType="Button">
            <Setter Property="IsEnabled" Value="True"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Button x:Name="btnPowieksz" Content="Powiększ przycisk" Width="100" Height="25" HorizontalAlignment="Left" Margin="360,197,0,0" VerticalAlignment="Top" Click="btnPowieksz_Click"/>
        <Button x:Name="btnZablokuj" Content="Zablokuj przyciski" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
